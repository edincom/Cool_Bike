<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nice_bike.SR"
             Title="Sale Representative">

    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Column="0" HorizontalOptions="Center">
            <Button Text="Catalog"
                    x:Name="Btn_Catalog"
                    BackgroundColor="DarkOrange"
                    Margin="20, 10, 20, 10"
                    Clicked="Button_Catalog_Clicked" />
            <Image Source="images.png" HeightRequest="200" Margin="0, 20, 0, 0" />
        </StackLayout>

        <StackLayout Grid.Column="1" HorizontalOptions="Center" >
            <Button Text="Clients"
                    x:Name="Btn_Clients"
                    BackgroundColor="DarkOrange"
                    Margin="20, 10, 20, 10"
                    Clicked="Button_Clients_Clicked" />
            <Image Source="clients.png" HeightRequest="200" Margin="0, 20, 0, 0" />
        </StackLayout>
    </Grid>
</ContentPage>
