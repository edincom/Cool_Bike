<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nice_bike.Adventure"
             Title="Adventure">
    
    <HorizontalStackLayout>
        <Image
            Source="adventurer.jpg"
            HeightRequest="450"
            Margin="100, 0, 0, 0"
            HorizontalOptions="Center" />

        <VerticalStackLayout Padding="300, 50, 100, 100">
            <Label
                Text="Select your options"
                FontAttributes="Bold"
                TextColor="DarkOrange"
                FontSize="45"
                HorizontalOptions="CenterAndExpand" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Select your size:" Margin="50, 100, 0, 0" />
                <Picker x:Name="Size" Margin="25, 100, 0, 0" Grid.Column="1" WidthRequest="250" SelectedIndexChanged="Picker1_SelectedIndexChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>26"</x:String>
                            <x:String>28"</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Select your color:" Margin="50, 60, 0, 0" />
                <Picker x:Name="Color" Margin="25, 60, 0, 0" Grid.Column="1" WidthRequest="250" SelectedIndexChanged="Picker2_SelectedIndexChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Red</x:String>
                            <x:String>Blue</x:String>
                            <x:String>Green</x:String>
                            <x:String>Black</x:String>
                            <x:String>White</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Text="Select your quantity:" Margin="50, 50, 0, 0" />

                <Entry x:Name="QuantityEntry" Grid.Row="1" Margin="50, 10, 0, 0" Keyboard="Numeric" Placeholder="Enter a number"/>
            </Grid>

            <HorizontalStackLayout>
                <Button Text="Confirm" Clicked="OnGetNumberClicked" Margin="50,10,0,0" FontSize="15" HeightRequest="25" WidthRequest="90"/>
                <Label x:Name="resultLabel" Margin="15,25,0,0"/>
            </HorizontalStackLayout>
            

            <HorizontalStackLayout>
                <Label
                    x:Name="UnitPrice"
                    Margin="-50,10,0,0"
                    Text="Price per unit : 200$"
                    HorizontalOptions="CenterAndExpand"/>
                <Label
                    x:Name="MySize"
                    Margin="40,10,0,0"
                    HorizontalOptions="CenterAndExpand"/>
                <Label
                    x:Name="MyColor"
                    Margin="40,10,0,0"
                    HorizontalOptions="CenterAndExpand"/>
                <Label
                    x:Name="MyNumber"
                    Margin="40,10,0,0"
                    HorizontalOptions="CenterAndExpand"/>


            </HorizontalStackLayout>


            <Button Text="Add to cart"
                    Clicked="Button_Clicked"
                    Margin="0,40,0,0"/>

        </VerticalStackLayout>
        
    </HorizontalStackLayout>

</ContentPage>