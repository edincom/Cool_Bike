<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nice_bike.Assembler"
             Title="Assembler">

    <StackLayout>

        <ListView x:Name="myListView"
                  Margin="0,20"
                  SeparatorVisibility="None">
            <ListView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />


                    </Grid.ColumnDefinitions>

                    <Label Text="Id" Grid.Column="0" FontAttributes="Bold" />
                    <Label Text="Model" Grid.Column="1" FontAttributes="Bold" />
                    <Label Text="Size" Grid.Column="2" FontAttributes="Bold" />
                    <Label Text="Color" Grid.Column="3" FontAttributes="Bold" />
                    <Label Text="Price" Grid.Column="4" FontAttributes="Bold" />
                    <Label Text="Loading/Finished" Grid.Column="5" FontAttributes="Bold" />
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate >
                <DataTemplate >
                    <ViewCell >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />


                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding idcommande}" Grid.Column="0"/>
                            <Label Text="{Binding model}" Grid.Column="1" />
                            <Label Text="{Binding size}" Grid.Column="2" />
                            <Label Text="{Binding color}" Grid.Column="3" />
                            <Label Text="{Binding price}" Grid.Column="4" />
                            <Switch IsToggled="False" OnColor="Orange"  ThumbColor="White" Toggled="Switch_Toggled" Grid.Column="5" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>