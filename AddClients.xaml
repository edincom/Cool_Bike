<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nice_bike.AddClients"
             Title="AddClients">
    <StackLayout>
        <Label Text="New client" FontSize="Large" Margin="0,20,0,0" HorizontalOptions="CenterAndExpand" />
        <Entry x:Name="NomEntry" Placeholder="Nom" FontSize="Large" Margin="0,20,0,0"/>
        <Entry x:Name="AdresseEntry" Placeholder="Adresse" FontSize="Large" Margin="0,20,0,0"/>
        <Entry x:Name="TVAEntry" Placeholder="TVA" FontSize="Large" Margin="0,20,0,0"/>
        <Button Text="Save" BackgroundColor="DarkOrange" Margin="20,20,20,0" Clicked="EnregistrerButton_Clicked" />
    </StackLayout>
</ContentPage>